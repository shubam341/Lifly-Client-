{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,              // add this to disable JS type checking
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "strict": true,
    "target": "ES2022",            // set JS target
    "lib": ["DOM", "DOM.Iterable", "ES2022"], // include DOM + ES features
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
